# Docker Compose 环境变量配置

# 数据库配置
POSTGRES_PASSWORD=frigate123
POSTGRES_USER=frigate
POSTGRES_DB=frigate_config

# Redis配置
REDIS_PASSWORD=frigate123

# Grafana配置
GRAFANA_PASSWORD=admin123

# 应用配置
NODE_ENV=production
PORT=8000

# API配置
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_HOST=localhost:8000

# 应用信息
VITE_APP_TITLE=Frigate Configuration UI
VITE_APP_VERSION=1.0.0

# 功能开关
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG=false

# 安全配置
VITE_ENABLE_HTTPS=false

# 可选：SSL证书路径（如果启用HTTPS）
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 可选：邮件通知配置
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# 可选：DDNS配置
# DDNS_PROVIDER=noip
# DDNS_DOMAIN=frigate.example.com
# DDNS_USERNAME=your-username
# DDNS_PASSWORD=your-password