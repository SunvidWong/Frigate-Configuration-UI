# 简化版远程部署环境配置文件
# 适用于云服务器或VPS部署

# 镜像配置
IMAGE_REGISTRY=ghcr.io/sunvidwong
MAIN_TAG=latest
POSTGRES_TAG=15-alpine
REDIS_TAG=7-alpine

# 域名和端口配置
DOMAIN=your-domain.com
HTTP_PORT=80
HTTPS_PORT=443

# 数据库配置
POSTGRES_DB=frigate_config
POSTGRES_USER=frigate
POSTGRES_PASSWORD=your_secure_password_here

# 应用配置
NODE_ENV=production
PORT=3000

# 时区配置
TZ=Asia/Shanghai