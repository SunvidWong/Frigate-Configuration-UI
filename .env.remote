# Frigate Configuration UI - 远程部署环境变量配置
# 复制此文件为 .env 并根据实际情况修改配置

# ===========================================
# 镜像配置
# ===========================================
# Docker 镜像仓库地址（默认使用 GHCR）
# 示例：ghcr.io/<your-org-or-username>
DOCKER_REGISTRY=ghcr.io/sunvidwong
# 主应用镜像标签
IMAGE_TAG=latest
# Nginx 镜像标签
NGINX_TAG=1.25-alpine
# Redis 镜像标签
REDIS_TAG=7.2-alpine
# PostgreSQL 镜像标签
POSTGRES_TAG=15.4-alpine
# Watchtower 镜像标签
WATCHTOWER_TAG=latest
# Curl 镜像标签
CURL_TAG=latest

# ===========================================
# 基础配置
# ===========================================
# 域名配置
DOMAIN=your-domain.com
# HTTP 端口
HTTP_PORT=80
# HTTPS 端口
HTTPS_PORT=443
# 是否启用 HTTPS
HTTPS_ENABLED=true

# ===========================================
# 数据库配置
# ===========================================
# PostgreSQL 密码（必须设置）
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ===========================================
# Redis 配置
# ===========================================
# Redis 密码（必须设置）
REDIS_PASSWORD=your_secure_redis_password_here

# ===========================================
# 安全配置
# ===========================================
# JWT 密钥（必须设置，建议使用 32 位随机字符串）
JWT_SECRET=your_jwt_secret_key_32_characters_long

# Session 密钥（必须设置，建议使用 32 位随机字符串）
SESSION_SECRET=your_session_secret_key_32_characters

# 加密密钥（必须设置，建议使用 32 位随机字符串）
ENCRYPTION_KEY=your_encryption_key_32_characters_long

# ===========================================
# Frigate 配置
# ===========================================
# Frigate 服务地址
FRIGATE_URL=http://your-frigate-server:5000
# Frigate API 密钥（如果启用了认证）
FRIGATE_API_KEY=

# ===========================================
# 应用配置
# ===========================================
# 日志级别 (debug, info, warn, error)
LOG_LEVEL=info
# 最大上传文件大小
MAX_UPLOAD_SIZE=10mb
# 是否启用监控指标
ENABLE_METRICS=true

# ===========================================
# 数据存储路径
# ===========================================
# 数据存储根目录
DATA_PATH=./data

# ===========================================
# 自动更新配置
# ===========================================
# 更新检查间隔（秒）
UPDATE_INTERVAL=3600
# Watchtower 通知配置
WATCHTOWER_NOTIFICATIONS=
WATCHTOWER_NOTIFICATION_URL=
# Watchtower 定时更新（Cron 格式）
WATCHTOWER_SCHEDULE=0 2 * * *
# Watchtower 日志级别
WATCHTOWER_LOG_LEVEL=info

# ===========================================
# 监控配置
# ===========================================
# 健康检查间隔（秒）
HEALTH_CHECK_INTERVAL=300

# ===========================================
# 性能配置
# ===========================================
# 工作进程数（建议设置为 CPU 核心数）
WORKER_PROCESSES=auto
# 最大连接数
WORKER_CONNECTIONS=1024

# ===========================================
# 备份配置
# ===========================================
# 自动备份间隔（小时）
BACKUP_INTERVAL=24
# 备份保留天数
BACKUP_RETENTION_DAYS=7
# 备份存储路径
BACKUP_PATH=./backups

# ===========================================
# 邮件通知配置（可选）
# ===========================================
# SMTP 服务器
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
# 通知邮箱
NOTIFICATION_EMAIL=

# ===========================================
# Webhook 通知配置（可选）
# ===========================================
# Webhook URL
WEBHOOK_URL=
# Webhook 密钥
WEBHOOK_SECRET=

# ===========================================
# 高级配置
# ===========================================
# 时区设置
TZ=Asia/Shanghai
# 文件权限
FILE_PERMISSIONS=644
# 目录权限
DIR_PERMISSIONS=755

# ===========================================
# 开发配置（生产环境请删除或注释）
# ===========================================
# 调试模式
DEBUG=false
# 开发模式
DEV_MODE=false