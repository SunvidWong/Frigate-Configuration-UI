# ================================
# Frigate Configuration UI - 生产环境配置
# ================================

# 基础应用配置
NODE_ENV=production
PORT=8000

# 域名和 URL 配置 (请修改为您的实际域名)
DOMAIN=your-domain.com
VITE_API_BASE_URL=https://your-domain.com
VITE_WS_HOST=your-domain.com

# 应用信息
VITE_APP_TITLE=Frigate Configuration UI
VITE_APP_VERSION=1.0.0

# 功能开关
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_HTTPS=true

# ================================
# 数据库配置
# ================================

# PostgreSQL 数据库密码 (请设置强密码)
POSTGRES_PASSWORD=your_strong_postgres_password_here

# Redis 缓存密码 (请设置强密码)
REDIS_PASSWORD=your_strong_redis_password_here

# 数据库连接 URL
DATABASE_URL=postgresql://frigate:${POSTGRES_PASSWORD}@postgres:5432/frigate_config
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# ================================
# 安全配置
# ================================

# JWT 密钥 (请生成随机字符串)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters

# 会话密钥 (请生成随机字符串)
SESSION_SECRET=your_session_secret_key_here_minimum_32_characters

# 加密密钥 (请生成随机字符串)
ENCRYPTION_KEY=your_encryption_key_here_32_characters

# API 密钥 (用于内部服务通信)
API_SECRET_KEY=your_api_secret_key_here

# ================================
# SSL/TLS 配置
# ================================

# SSL 证书路径
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Let's Encrypt 配置 (如果使用)
LETSENCRYPT_EMAIL=admin@your-domain.com
LETSENCRYPT_DOMAIN=your-domain.com

# ================================
# 监控配置
# ================================

# Grafana 管理员密码
GRAFANA_PASSWORD=your_strong_grafana_password_here

# Prometheus 配置
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_RETENTION_SIZE=10GB

# ================================
# 邮件配置 (用于告警通知)
# ================================

# SMTP 服务器配置
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your_email_password_here

# 邮件发送者信息
MAIL_FROM=noreply@your-domain.com
MAIL_FROM_NAME=Frigate Configuration UI

# 管理员邮箱 (接收告警)
ADMIN_EMAIL=admin@your-domain.com

# ================================
# 存储配置
# ================================

# 数据存储路径 (宿主机路径)
DATA_PATH=/opt/frigate-ui/data

# 日志存储路径
LOG_PATH=/opt/frigate-ui/logs

# 配置文件存储路径
CONFIG_PATH=/opt/frigate-ui/config

# 文件上传限制 (MB)
MAX_FILE_SIZE=100

# ================================
# 性能配置
# ================================

# 工作进程数 (建议设置为 CPU 核心数)
WORKER_PROCESSES=auto

# 数据库连接池大小
DB_POOL_SIZE=20
DB_POOL_MAX=50

# Redis 连接池大小
REDIS_POOL_SIZE=10

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=100MB

# ================================
# 日志配置
# ================================

# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info

# 日志格式 (json, text)
LOG_FORMAT=json

# 日志文件大小限制 (MB)
LOG_MAX_SIZE=10

# 日志文件保留数量
LOG_MAX_FILES=5

# ================================
# 备份配置
# ================================

# 自动备份开关
ENABLE_AUTO_BACKUP=true

# 备份保留天数
BACKUP_RETENTION_DAYS=7

# 备份存储路径
BACKUP_PATH=/opt/frigate-ui/backups

# ================================
# 第三方服务配置
# ================================

# Frigate 服务器地址 (如果需要连接现有 Frigate 实例)
FRIGATE_HOST=192.168.1.100
FRIGATE_PORT=5000
FRIGATE_API_KEY=your_frigate_api_key_here

# 外部 API 配置
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRIES=3

# ================================
# 开发和调试配置 (生产环境请保持关闭)
# ================================

# 调试模式
DEBUG=false

# 详细日志
VERBOSE_LOGGING=false

# 性能监控
ENABLE_PROFILING=false

# API 文档 (生产环境建议关闭)
ENABLE_API_DOCS=false

# ================================
# 时区和本地化
# ================================

# 时区设置
TZ=Asia/Shanghai

# 语言设置
LANG=zh_CN.UTF-8
LC_ALL=zh_CN.UTF-8

# ================================
# 网络配置
# ================================

# 允许的源地址 (CORS)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# 信任的代理地址
TRUSTED_PROXIES=127.0.0.1,::1,172.20.0.0/16

# WebSocket 配置
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# ================================
# 资源限制
# ================================

# 内存限制 (MB)
MEMORY_LIMIT=1024

# CPU 限制 (核心数)
CPU_LIMIT=2

# 并发连接数限制
MAX_CONNECTIONS=1000

# 请求频率限制 (每分钟)
RATE_LIMIT=100

# ================================
# 注意事项
# ================================

# 1. 请将所有密码替换为强密码
# 2. 请将域名替换为您的实际域名
# 3. 请根据服务器配置调整性能参数
# 4. 生产环境请确保所有调试功能关闭
# 5. 定期更新密钥和证书
# 6. 备份此配置文件到安全位置